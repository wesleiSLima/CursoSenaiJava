package aulas;

import java.util.Locale;
import java.util.Scanner;

public class EntradaDadosTeclado {

	public static void main(String[] args) {

		Scanner leia = new Scanner(System.in).useLocale(Locale.US);

		String nome;
		int numero = 0;
		char sexo;
		double x = 0;

		// System.out.println("O valor de x é " + x);

		System.out.println("Insira um valor para a variável x: ");
		x = leia.nextDouble();

		System.out.println("Digite seu nome: ");
		nome = leia.nextLine();
		
		System.out.println("Digite um número: ");
		numero = leia.nextInt();
		
		System.out.println("Digite M para masculino ou F para feminino: ");
		sexo = leia.next().charAt(0);
		

		System.out.println("O valor de x agora está valendo: " + x);
		
		System.out.println("O nome é: " + nome);
		
		System.out.println("O número é: " + numero);
		
		System.out.println("O sexo é: " + sexo);

		leia.close();

	}

}
